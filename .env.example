# Environment variables for docker-compose
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=fastapi_lab
ENVIRONMENT=development
APP_PORT=8000
API_KEY=dev-api-key-change-in-production
SECRET_KEY=dev-secret-key-change-in-production
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/fastapi_lab

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fastapi_lab
POSTGRES_PORT=5433  # Use 5433 to avoid conflict with local Postgres (5432)

# Redis
REDIS_PASSWORD=redis
REDIS_PORT=6380  # Use 6380 to avoid conflict with local Redis (6379)

# pgAdmin (development only)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander (development only)
REDIS_COMMANDER_PORT=8081

# MailHog (development only)
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
