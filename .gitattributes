# Handle line endings automatically for files detected as text
# and leave all files detected as binary untouched.
* text=auto

# Force LF for text files
*.py text eol=lf
*.pyi text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.sh text eol=lf
*.bash text eol=lf

# Dockerfile
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Git config
.gitignore text eol=lf
.gitattributes text eol=lf
.gitmodules text eol=lf

# CI/CD
.github/**/*.yml text eol=lf
.gitlab-ci.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pyc binary
*.pyd binary
*.so binary
*.dll binary
*.dylib binary

# Python-specific
*.ipynb linguist-documentation

# Archive files
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.xz binary

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary
